#!/bin/sh

set -e

if grep -v '^#' /etc/fstab | grep -q cgroup || [ ! -e /proc/cgroups ] || [ ! -d /sys/fs/cgroup ]; then
  mkdir -p /sys/fs/cgroup
fi

if ! mountpoint -q /sys/fs/cgroup; then
  mount -t tmpfs -o uid=0,gid=0,mode=0755 cgroup /sys/fs/cgroup
fi

(
  cd /sys/fs/cgroup
  for sys in $( awk -F: '{print $2}' /proc/self/cgroup); do
    mkdir -p $sys
    if ! mountpoint -q $sys; then
      if ! mount -n -t cgroup -o $sys cgroup $sys; then
        rmdir $sys || true
      fi
    fi
  done
)

mkdir /sys/fs/cgroup/systemd || true
mount -t cgroup -o none,name=systemd cgroup /sys/fs/cgroup/systemd || true

exit 0
